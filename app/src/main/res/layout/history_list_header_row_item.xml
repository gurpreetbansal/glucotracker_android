<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/blankRowView"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical">

        <CustomControl.TextViewGothamBook
            android:id="@+id/dateValueTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape_transparent"
            android:gravity="center"
            android:text="@string/dateTextView"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <CustomControl.TextViewGothamBook
            android:id="@+id/timeValueTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape_transparent"
            android:gravity="center"
            android:text="@string/timeTextView"
            android:textColor="@color/blue"
            android:textStyle="bold"

            />

        <CustomControl.TextViewGothamBook
            android:id="@+id/resultValueTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape_transparent"
            android:gravity="center"
            android:text="@string/resultTextView"
            android:textColor="@color/blue"
            android:textStyle="bold"

            />

        <RelativeLayout
            android:id="@+id/dietView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape_transparent"
            android:gravity="center"
            android:padding="10dp">

            <CustomControl.TextViewGothamBook
                android:id="@+id/dietTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/dietTextView"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/dietValueImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:src="@drawable/two_hours_history"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/medicineView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape_transparent">

            <ImageView
                android:id="@+id/medicineValueImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:src="@drawable/tablet" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/deleteView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:background="@drawable/button_shape_transparent">

            <CustomControl.TextViewGothamBook
                android:id="@+id/deleteTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/deleteTextView"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/deleteValueImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:src="@drawable/delete_history"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>