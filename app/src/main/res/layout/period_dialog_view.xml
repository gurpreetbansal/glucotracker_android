<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/fromView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CustomControl.TextViewGothamBook
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center_vertical"
            android:text="@string/fromText"
            android:textColor="@android:color/black" />


        <CustomControl.TextViewGothamBook
            android:id="@+id/fromDateTextView"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape_light_white"
            android:clickable="true"
            android:gravity="center"
            android:onClick=""
            android:text="- -"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <CustomControl.TextViewGothamBook
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center_vertical"
            android:text="@string/toText"
            android:textColor="@android:color/black" />

        <CustomControl.TextViewGothamBook
            android:id="@+id/toDateTextView"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape_light_white"
            android:clickable="true"
            android:gravity="center"
            android:text="- -"
            android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>